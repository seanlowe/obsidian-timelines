{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": [
      "dom",
      "DOM.Iterable",
      "es5",
      "scripthost",
      "es2015"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    // "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es6",
  },
  "include": [
    "**/*.ts"
  ]
}
